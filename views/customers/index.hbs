{{#extends "base"}}
{{#block "content"}}
<h1>Customers</h1>
<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Rating</th>
        <th>Company</th>

    </tr>
    {{#each customers}}
    <tr>
        <td>{{Customers.first_name}}</td>
        <td>{{Customers.last_name}}</td>
        <td>{{Customers.rating}}</td>
        <td>{{Companies.name}}</td>
        <td><a href="/customers/{{Customers.customer_id}}/edit" class="btn btn-primary">Edit</a></td>

        <td><a href="/customers/{{Customers.customer_id}}/delete" class="btn btn-danger">Delete</a></td>

    </tr>
    {{/each}}
</table>
{{/block}}
{{/extends}}

